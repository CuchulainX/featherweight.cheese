get_barcode() {
  while [ "${barcode:0:3}" != "978" ]; do
    echo "Prepare for calibration then wand ISBN"
    read barcode
  done
  isbn=${barcode:0:13}
  xdg-open "http://books.google.com/books?vid=isbn${barcode}" 2> /dev/null
}

scan() {
  local SCANNERS=$(scanimage -L)
  if [ $(echo "$SCANNERS" | wc -l) != 2 ]; 
  then
    echo "Error. I need two scanbars to proceed, and all I have is:"
    echo "$SCANNERS"
    exit 1
  fi

  local S1=$(echo "$SCANNERS" | head -1 | cut -f2 -d'`' | cut -f1 -d"'")
  local S2=$(echo "$SCANNERS" | tail -1 | cut -f2 -d'`' | cut -f1 -d"'")

  # Driver hacked such that -y 111 means "scan as long as you can"
  local ARGS="--clear-calibration -y 111 --mode=color"

  # Ahoy! red = port = left, green = starboard = right
  scanimage -d $S1 --color-filter=Red > /dev/null &
  scanimage -d $S2 --color-filter=Green > /dev/null
  wait

  get_barcode

  scanimage -d $S1 $ARGS $@ |\
    ./meter.py | ./wobble.py | ./split.py 0 $barcode | ./viewer.py > /dev/null &

  scanimage -d $S2 $ARGS $@ |\
    ./wobble.py | ./split.py 1 $barcode | ./viewer.py > /dev/null &

  sleep 5
  echo -n "Calibration complete. Begin scanning."
}

scan $@
wait

